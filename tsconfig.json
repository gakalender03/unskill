{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "isolatedModules": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
